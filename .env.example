# M&A SaaS Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=development
PYTHON_ENV=development
DEBUG=true

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL Connection String
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/ma_saas_platform

# Render PostgreSQL (Production)
# DATABASE_URL=<from Render dashboard>

# ============================================================================
# REDIS
# ============================================================================
# Redis Connection String
REDIS_URL=redis://localhost:6379/0

# Render Redis (Production)
# REDIS_URL=<from Render dashboard>

# ============================================================================
# AUTHENTICATION & SUBSCRIPTION BILLING - CLERK
# ============================================================================
# Clerk handles BOTH authentication AND subscription billing (recurring payments)
# Get these from: https://dashboard.clerk.com

# Frontend (Public Key)
VITE_CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key_here

# Backend (Secret Key)
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key_here

# Clerk Webhook Secret (for subscription events)
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret

# Clerk has Stripe integrated for subscription billing
# Subscription tiers are configured in Clerk dashboard:
# - Starter: £279/month
# - Professional: £598/month
# - Enterprise: £1,598/month
# - Community Leader: £2,997/month

# ============================================================================
# ONE-OFF PAYMENTS - STRIPE
# ============================================================================
# Stripe handles one-off payments ONLY (events, masterclasses, premium content)
# Get these from: https://dashboard.stripe.com

VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Product IDs for one-off payments (create in Stripe Dashboard)
STRIPE_EVENT_TICKET_PRICE_ID=price_event_ticket
STRIPE_MASTERCLASS_PRICE_ID=price_masterclass
STRIPE_PREMIUM_CONTENT_PRICE_ID=price_premium_content

# ============================================================================
# AI SERVICES
# ============================================================================
# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_key_here

# Anthropic API Key
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# ============================================================================
# ACCOUNTING INTEGRATIONS
# ============================================================================
# Xero API
XERO_CLIENT_ID=your_xero_client_id
XERO_CLIENT_SECRET=your_xero_client_secret
XERO_REDIRECT_URI=http://localhost:3000/integrations/xero/callback

# QuickBooks API
QUICKBOOKS_CLIENT_ID=your_qb_client_id
QUICKBOOKS_CLIENT_SECRET=your_qb_client_secret
QUICKBOOKS_REDIRECT_URI=http://localhost:3000/integrations/quickbooks/callback

# Sage API
SAGE_CLIENT_ID=your_sage_client_id
SAGE_CLIENT_SECRET=your_sage_client_secret
SAGE_REDIRECT_URI=http://localhost:3000/integrations/sage/callback

# NetSuite API
NETSUITE_ACCOUNT_ID=your_netsuite_account_id
NETSUITE_CONSUMER_KEY=your_netsuite_consumer_key
NETSUITE_CONSUMER_SECRET=your_netsuite_consumer_secret
NETSUITE_TOKEN_ID=your_netsuite_token_id
NETSUITE_TOKEN_SECRET=your_netsuite_token_secret

# ============================================================================
# MARKETING AUTOMATION - GOHIGHLEVEL
# ============================================================================
GOHIGHLEVEL_API_KEY=your_ghl_api_key
GOHIGHLEVEL_LOCATION_ID=your_ghl_location_id

# ============================================================================
# EMAIL SERVICE
# ============================================================================
# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@apexdeliver.com
SENDGRID_FROM_NAME=M&A Intelligence Platform

# AWS SES (Alternative)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_SES_FROM_EMAIL=noreply@apexdeliver.com

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Sentry
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Datadog
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# ============================================================================
# DEPLOYMENT - RENDER
# ============================================================================
RENDER_API_KEY=rnd_your_render_api_key_here

# ============================================================================
# VERSION CONTROL - GITHUB
# ============================================================================
GITHUB_TOKEN=github_pat_your_github_token_here

# ============================================================================
# FRONTEND SPECIFIC (VITE)
# ============================================================================
# API Base URL
VITE_API_URL=http://localhost:8000

# Production API URL (Render)
# VITE_API_URL=https://ma-saas-backend.onrender.com

# ============================================================================
# BACKEND SPECIFIC (FASTAPI)
# ============================================================================
# JWT Secret for internal use (generate a random string)
JWT_SECRET=your_random_jwt_secret_here_min_32_chars

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Production CORS
# CORS_ORIGINS=https://apexdeliver.com,https://ma-saas-platform.onrender.com

# ============================================================================
# CELERY TASK QUEUE
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# FILE STORAGE
# ============================================================================
# Local storage path
UPLOAD_DIR=./uploads

# AWS S3 (for production file storage)
# AWS_S3_BUCKET=ma-saas-platform-files
# AWS_S3_REGION=us-east-1
# AWS_S3_ACCESS_KEY_ID=your_s3_access_key
# AWS_S3_SECRET_ACCESS_KEY=your_s3_secret_key

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_AI_FEATURES=true
ENABLE_DEAL_MATCHING=true
ENABLE_PODCAST_STUDIO=false
ENABLE_EVENT_MANAGEMENT=false
ENABLE_COMMUNITY_PLATFORM=false

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# SESSION & SECURITY
# ============================================================================
SESSION_SECRET=your_session_secret_min_32_chars
ENCRYPTION_KEY=your_encryption_key_32_chars

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
# Enable SQL query logging
LOG_SQL_QUERIES=false

# Enable detailed error messages
SHOW_ERROR_DETAILS=true

