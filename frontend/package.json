{
  "name": "ma-saas-frontend",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "M&A Intelligence Platform - Frontend Application",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc -b && vite build",
    "test": "node scripts/run-vitest.mjs run",
    "test:watch": "node scripts/run-vitest.mjs",
    "test:coverage": "node scripts/run-vitest.mjs run --coverage",
    "lint": "eslint .",
    "preview": "vite preview",
    "preview:test": "vite preview --host 0.0.0.0 --port 4173 --strictPort",
    "lighthouse:local": "lighthouse http://127.0.0.1:4173/ --output html --output json --output-path=./docs/testing/lighthouse-report.html",
    "axe:local": "axe http://127.0.0.1:4173/ --load-delay 5000 --timeout 60000 --save docs/testing/axe-report.json",
    "audit:local": "npm run lighthouse:local && npm run axe:local",
    "audit:help": "echo 'Usage: VITE_CLERK_PUBLISHABLE_KEY=<key> npm run preview:test (in one terminal), then npm run audit:local (in another)'"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.53.3",
    "@hello-pangea/dnd": "^18.0.1",
    "@tanstack/react-query": "^5.90.5",
    "axios": "^1.12.2",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.552.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.4",
    "recharts": "^3.4.1",
    "serve": "^14.2.5",
    "wouter": "^3.7.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.11.0",
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^27.2.0",
    "lighthouse": "^11.7.0",
    "msw": "^2.12.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.2.2",
    "vite-plugin-imagemin": "^0.1.0",
    "vitest": "^4.0.8",
    "web-streams-polyfill": "^3.3.3"
  }
}
