# Frontend Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git - it contains sensitive keys

# ============================================
# NODE / BUILD CONFIGURATION
# ============================================
NODE_VERSION=22.13.0
NODE_ENV=production

# ============================================
# API ENDPOINTS
# ============================================
VITE_API_URL=https://your-backend-url.onrender.com
VITE_API_V1_URL=https://your-backend-url.onrender.com/api/v1

# ============================================
# APPLICATION METADATA
# ============================================
VITE_APP_ENV=production
VITE_APP_NAME="YourAppName"
VITE_APP_VERSION=2.0.0
VITE_ENVIRONMENT=production

# ============================================
# AUTHENTICATION (PUBLIC)
# ============================================
# Clerk publishable key (safe to expose in frontend)
VITE_CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key_here

# ============================================
# PAYMENTS (PUBLIC)
# ============================================
# Stripe publishable key (safe to expose in frontend)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# ============================================
# FEATURE FLAGS
# ============================================
VITE_FEATURE_AI_INSIGHTS=true
VITE_FEATURE_ARBITRAGE=true
VITE_FEATURE_CONTENT=true
VITE_FEATURE_DOCUMENTS=true
VITE_FEATURE_INTEGRATIONS=true
VITE_FEATURE_OPPORTUNITIES=true
VITE_FEATURE_VALUATIONS=true

# ============================================
# PORTAL FEATURE FLAGS
# ============================================
# Master Admin Portal - Accessible to admin role users
VITE_ENABLE_MASTER_ADMIN=true

# Customer Portal - B2B2C sub-sub-accounts portal
VITE_ENABLE_CUSTOMER_PORTAL=true

# ============================================
# OPTIONAL / RUNTIME FLAGS
# ============================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_ENABLE_WEBSOCKET=false
